<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<baseDirectory>devops</baseDirectory>
	<formats>
		<format>tar.gz</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/jsw</directory>
			<excludes>
			  <exclude>**/*.bat</exclude>
			</excludes>
			<outputDirectory>.</outputDirectory>
		</fileSet>
		<!-- Create empty logs directories -->
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>devops-core/logs</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>devops-web/logs</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
		</fileSet>
	</fileSets>

	<files>
		<file>
			<source>${project.build.directory}/dependency/${jetty.runner}</source>
			<outputDirectory>devops-web/lib</outputDirectory>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<scope>provided</scope>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<includes>
				<include>org.devops:devops-core</include>
			</includes>
			<outputDirectory>devops-core/lib</outputDirectory>
		</dependencySet>
		<dependencySet>
			<scope>provided</scope>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<includes>
				<include>org.devops:devops-webapp:war</include>
			</includes>
			<outputDirectory>devops-web/lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>